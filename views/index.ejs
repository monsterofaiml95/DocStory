<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Drive Clone</title>
  <style>
    body, h1, form {
        margin: 0;
        padding: 0;
    }

    body {
        background: #f4f5f7;
        font-family: 'Roboto', sans-serif;
    }

    header {
        background-color: #6062cb; 
        color: white;
        text-align: center;
        padding: 25px 0;
        box-shadow: 0 3px 15px rgba(0, 0, 0, 0.1);
    }

    main {
        display: flex;
        flex-direction: column;
        align-items: center;
        max-width: 600px;
        margin: 3% auto;
        padding: 30px;
        background-color: #8fb0e8;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
    }

    .container {
        text-align: center;
    }

    input[type="file"] {
        display: none;
    }

    label.upload-button {
        display: inline-block;
        margin: 20px auto;
        padding: 12px 30px;
        background-color: #3267bc;
        color: white;
        border: none;
        cursor: pointer;
        border-radius: 5px; 
        transition: all 0.3s ease-in-out;
    }

    label.upload-button:hover {
        background-color: #3267bc;
        transform: translateY(-2px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }

    .file-name {
        margin-top: 10px;
        color: #333;
    }

    .buttons a {
        margin: 0 10px;
        padding: 10px 25px;
        background-color: #3267bc; 
        color: white;
        text-decoration: none;
        border-radius: 5px;
        transition: all 0.3s ease-in-out;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.08);
    }

    .buttons a:hover {
        background-color: #3267bc;
        transform: translateY(-2px);
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15);
    }
</style>
</head>
<body>
  <header>
    <h1>Drive Clone</h1>
  </header>
  <main>
    <form action="/upload" method="POST" enctype="multipart/form-data" class="container">
      <label for="file" class="upload-button">
        <span class="file-input-label">Choose a file</span>
        <input type="file" id="file" name="file" required onchange="updateFileName()">
      </label>
      <span class="file-name" id="file-name"></span>
      <button type="submit">Upload</button>
    </form>
    <div class="buttons">
      <a href="/delete">Delete Docs</a>
      <a href="/download">Download Docs</a>
    </div>
  </main>

  <script>
    function updateFileName() {
      const fileInput = document.getElementById('file');
      const fileNameDisplay = document.getElementById('file-name');
      if (fileInput.files.length > 0) {
        fileNameDisplay.textContent = `Selected File: ${fileInput.files[0].name}`;
      } else {
        fileNameDisplay.textContent = '';
      }
    }
  </script>
</body>
</html>
