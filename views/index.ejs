<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Drive Clone</title>
  <style>
    /* Reset some default styles */
    body, h1, form {
      margin: 0;
      padding: 0;
    }
    
    /* Apply a background color to the entire page */
    body {
      background-color: #f7f7f7; /* Light gray for a calming effect */
      font-family: Arial, sans-serif;
    }
    
    /* Style the header */
    header {
      background-color: #0077b6; /* A deep blue for the header background */
      color: #fff;
      text-align: center;
      padding: 20px 0;
    }

    /* Style the main content */
    main {
      display: flex;
      flex-direction: column;
      align-items: center;
      max-width: 600px;
      margin: 0 auto;
      padding: 20px;
      background-color: #fff;
      box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    /* Style the container */
    .container {
      text-align: center;
    }

    /* Style the file input and submit button */
    input[type="file"] {
      display: none;
    }

    label.upload-button {
      display: inline-block;
      margin: 20px auto;
      padding: 10px 20px;
      background-color: #0077b6; /* A deep blue for trustworthiness */
      color: #fff;
      border: none;
      cursor: pointer;
      border-radius: 5px;
      transition: background-color 0.3s ease-in-out;
    }

    label.upload-button:hover {
      background-color: #005d91; /* Darker blue on hover */
    }

    .file-input-label {
      font-weight: bold;
    }
    
    .file-name {
      margin-top: 10px;
    }

    /* Style the buttons */
    .buttons {
      display: flex;
      justify-content: center;
      margin-top: 20px;
    }

    .buttons a {
      margin: 0 10px;
      padding: 10px 20px;
      background-color: #f94144; /* A passionate red for attention */
      color: #fff;
      text-decoration: none;
      transition: background-color 0.3s ease-in-out;
    }

    .buttons a:hover {
      background-color: #f3722c; /* A warm orange for excitement */
    }
  </style>
</head>
<body>
  <header>
    <h1>Drive Clone</h1>
  </header>
  <main>
    <form action="/upload" method="POST" enctype="multipart/form-data" class="container">
      <label for="file" class="upload-button">
        <span class="file-input-label">Choose a file</span>
        <input type="file" id="file" name="file" required onchange="updateFileName()">
      </label>
      <span class="file-name" id="file-name"></span>
      <button type="submit">Upload</button>
    </form>
    <div class="buttons">
      <a href="/delete">Delete Docs</a>
      <a href="/download">Download Docs</a>
    </div>
  </main>

  <script>
    function updateFileName() {
      const fileInput = document.getElementById('file');
      const fileNameDisplay = document.getElementById('file-name');
      if (fileInput.files.length > 0) {
        fileNameDisplay.textContent = `Selected File: ${fileInput.files[0].name}`;
      } else {
        fileNameDisplay.textContent = '';
      }
    }
  </script>
</body>
</html>
